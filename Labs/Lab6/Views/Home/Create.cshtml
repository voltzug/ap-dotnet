@model Lab6.Models.MovieDto

@{
    ViewData["Title"] = "Dodaj";
}

<h1>Dodaj</h1>

<h4>Film</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                @Html.EditorFor(m => m.Description)
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrailerLink" class="control-label"></label>
                <input asp-for="TrailerLink" class="form-control" />
                <span asp-validation-for="TrailerLink" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Gatunek</label>

                <!-- Dropdown with existing genres and an option to enter a custom one -->
                <select id="genreSelect" class="form-control">
                    <option value="">-- Wybierz gatunek --</option>
                    @foreach (var item in Model.AllGenres ?? new List<string>())
                    {
                        <option value="@item">@item</option>
                    }
                    <option value="__custom__">Wpisz inny...</option>
                </select>

                <!-- Visible bound input for the genre; JS will keep it synced with the select.
                     Using asp-for so validation attributes are present on the input. -->
                <input asp-for="Genre" id="GenreInput" class="form-control mt-2" />

                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>

            <script>
                (function () {
                    var select = document.getElementById('genreSelect');
                    var input = document.getElementById('GenreInput');

                    function updateInputFromSelect() {
                        var val = select.value;
                        if (val === '__custom__') {
                            // allow user to type a custom value
                            input.removeAttribute('readonly');
                            input.value = '';
                            input.focus();
                        } else {
                            // set the input to selected option and make it readonly
                            input.value = val || '';
                            if (val) {
                                input.setAttribute('readonly', 'readonly');
                            } else {
                                input.removeAttribute('readonly');
                            }
                        }

                        // Trigger client-side validation update if available
                        if (typeof $(input).valid === 'function') {
                            $(input).valid();
                        }
                    }

                    function updateSelectFromInput() {
                        // If select is currently on custom option, keep input as-is.
                        // Otherwise, keep the selected option (but allow user edits only when custom).
                        if (select.value === '__custom__') {
                            // nothing to do here besides possibly validate
                        } else {
                            // if user clears the input, clear the select as well
                            if (!input.value) {
                                select.value = '';
                            }
                        }

                        if (typeof $(input).valid === 'function') {
                            $(input).valid();
                        }
                    }

                    // Initialize select/input based on model value
                    (function init() {
                        var modelVal = '@(Model?.Genre ?? "")';
                        if (!modelVal) {
                            select.value = '';
                            input.value = '';
                            input.removeAttribute('readonly');
                        } else {
                            var found = false;
                            for (var i = 0; i < select.options.length; i++) {
                                if (select.options[i].value === modelVal) {
                                    select.value = modelVal;
                                    found = true;
                                    break;
                                }
                            }
                            if (found) {
                                input.value = modelVal;
                                input.setAttribute('readonly', 'readonly');
                            } else {
                                select.value = '__custom__';
                                input.value = modelVal;
                                input.removeAttribute('readonly');
                            }
                        }
                    })();

                    if (select) {
                        select.addEventListener('change', updateInputFromSelect);
                    }
                    if (input) {
                        input.addEventListener('input', updateSelectFromInput);
                    }
                })();
            </script>

            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

