@model IEnumerable<Lab5.Models.Movie>

@{
    Layout = null;
}

<table class="table table-striped table-bordered align-middle mt-3">
    <thead class="table-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Tytuł</th>
            <th scope="col">Opis</th>
            <th scope="col">Ocena</th>
            <th scope="col">Zwiastun</th>
            <th scope="col">Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td style="max-width: 300px; white-space: pre-line;">@item.Description</td>
                <td>@Html.DisplayFor(modelItem => item.Rating)</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.TrailerLink))
                    {
                        @await Html.PartialAsync("~/Views/Shared/ExternalLink.cshtml", new Lab5.Models.ExternalLinkModel { Url = item.TrailerLink, Text = "Otwórz zwiastun w nowej karcie" })
                    }
                    else
                    {
                        <span class="text-muted">Brak</span>
                    }
                </td>
                <td>
                    @Html.ActionLink("Szczegóły", "Details", "Movies", new { id = item.Id }, new { @class = "btn btn-secondary btn-sm me-1" })
                    @Html.ActionLink("Edytuj", "Edit", "Movies", new { id = item.Id }, new { @class = "btn btn-warning btn-sm me-1" })
                    @Html.ActionLink("Usuń", "Delete", "Movies", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>